#!/bin/bash

localBin="$HOME/.local/bin"
BG="$localBin/bg"

# Kill existing processes
procs=(
    "waybar"
    "mako"
    "eww"
    "hyprpaper"
    "gammastep"
    "nm-applet"
)

for proc in "${procs[@]}"; do
	if [[ $(pidof ${proc}) ]]; then
		killall -9 ${proc}
	fi
done

# Start gammastep *first*
if [[ ! $(pidof gammastep) ]]; then
    gammastep &
fi

# GTK theme
THEME="rose-pine-moon-gtk"
ICONS="rose-pine-moon-icons"
FONT='SF Pro Display'
CURSOR='macOS-Monterey'

SCHEMA='gsettings set org.gnome.desktop.interface'

apply_themes() {
	${SCHEMA} gtk-theme "$THEME"
	${SCHEMA} icon-theme "$ICONS"
	${SCHEMA} cursor-theme "$CURSOR"
	${SCHEMA} font-name "$FONT"
}

apply_themes

# nm-applet needed for VPNs to work
if [[ ! $(pidof nm-applet) ]]; then
    nm-applet &
fi

# Launch mako
MAKO_CONFIG="$HOME/.config/hypr/mako/config"

if [[ ! $(pidof mako) ]]; then
	mako --config ${MAKO_CONFIG} &
fi

# Launch eww
if [[ ! $(pidof eww) ]]; then
    EWW="eww -c $HOME/.config/eww/bar"

    ${EWW} daemon
    sleep 1

	${EWW} open bar &
fi

# Launch hyprpaper
if [[ ! $(pidof hyprpaper) ]]; then
    hyprpaper &
fi

# Set env vars
export BEMOJI_PICKER_CMD=/usr/bin/rofi
